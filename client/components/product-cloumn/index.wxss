.container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 683rpx;
  margin: 30rpx;
  border-bottom: 2rpx solid rgba(220, 220, 220, 1);
  background: #fff;
}

.product-left {
  width: 30%;
}

.product-right {
  width: 65%;
  padding-left: 5%;
}

.product-img image {
  width: 162rpx;
  height: 228rpx;
  border-radius: 5px;
}


.product-title {
  font-size: 30rpx;
  font-weight: 400;
  color: #161514;
}

.market-price-container {
  margin-bottom: -10rpx;
}

.market-price-container text {
  height: 23rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #9B9B9B;

}

.discount-price-container {
  width: 100%;
  display: inline-flex;
  justify-content: space-between;
  align-items: flex-end;
}

.discount-price-desc {
  height: 23rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #424242;
}

.discount-price-symbol,
.discount-price {
  font-size: 30rpx;
  font-weight: 400;
  color: #FF5251;
}

.discount-price-right .go {
  width: 180rpx;
  height: 56rpx;
  line-height: 56rpx;
  background: rgba(255, 79, 80, 1);
  border-radius: 10rpx;
  color: #fff;
  font-size: 24rpx;
  padding: 0;
}

.product-content {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;

}